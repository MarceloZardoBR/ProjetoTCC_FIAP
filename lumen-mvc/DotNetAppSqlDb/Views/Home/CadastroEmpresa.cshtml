@model DotNetAppSqlDb.Models.Empresa

@{
    ViewBag.Title = "CadastroEmpresa";
    Layout = "~/Views/Shared/VocacionalTesteView.cshtml";

}
<link href="@Url.Content("~/Content/css/login-aluno.css")" rel="stylesheet" id="bootstrap-css">
<script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.min.js")"></script>
<script src="@Url.Content("~/Content/vendor/jquery/jquery.min.js")"></script>

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="@Url.Content("~/Content/empresa.png")" id="icon" alt="User Icon" />
        </div>

        <h5 style="text-align: center">@TempData["Mensagem"]</h5>
        <!-- Login Form -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("CadastroEmpresa", "Home", FormMethod.Post))
        {
            <div>
                @Html.TextBoxFor(model => model.NomeEmpresa, new { placeholder = "Nome da Empresa", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.NomeEmpresa, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Area.NomeArea, new { placeholder = "Area de Atuação", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Area.NomeArea, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Telefone, new { placeholder = "Telefone", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Endereco.Estado, new { placeholder = "Estado", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Endereco.Estado, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Endereco.Numero, new { placeholder = "Número", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Endereco.Numero, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Endereco.Complemento, new { placeholder = "Complemento", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Endereco.Complemento, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.PasswordFor(model => model.Senha, new { placeholder = "Senha", htmlAttributes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            </div>
                <input type="submit" class="fadeIn fourth" value="Cadastrar">
                @Html.ActionLink("Voltar", "Index", new { @class = "fadeIn fourth" })
        }
       
    </div>
</div>
