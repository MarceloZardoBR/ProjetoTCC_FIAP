@model  DotNetAppSqlDb.Models.Escola

@{
    ViewBag.Title = "LoginEscola";
    Layout = "~/Views/Shared/VocacionalTesteView.cshtml";
}
<link href="@Url.Content("~/Content/css/login-aluno.css")" rel="stylesheet" id="bootstrap-css">
<script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.min.js")"></script>
<script src="@Url.Content("~/Content/vendor/jquery/jquery.min.js")"></script>
<link href="@Url.Content("~/Content/css/registra-aluno.css")" />
<!------ Include the above in your HEAD tag ---------->
<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="@Url.Content("~/Content/escola.png")" id="icon" alt="User Icon" />
        </div>
        @*@if (!ViewData.ModelState.IsValid)
            {
            @Html.ValidationSummary()
            }
            @TempData["Mensagem"]*@
        <!-- Login Form -->
        @using (Html.BeginForm("LoginEscola", "Escolas", FormMethod.Post))
        {
            <div>
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", htmlAtributtes = new { @class = "fadeIn second" } })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div>
                @Html.PasswordFor(model => model.Senha, new { placeholder = "Senha", htmlAtributtes = new { @class = "fadeIn third" } })
                @Html.ValidationMessageFor(model => model.Senha)
            </div>
            <input type="submit" class="fadeIn fourth" value="Log In">
        }
        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>
    </div>
</div>

