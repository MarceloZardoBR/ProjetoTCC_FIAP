@model IEnumerable<DotNetAppSqlDb.Models.Aluno>

@{
    String senhaPadrao = (String)ViewData["SenhaPadrao"];
    Layout = "~/Views/Shared/EscolaView.cshtml";
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>Alunos</h2>
    <h5>A senha padrão inicial para os alunos importados é: @senhaPadrao</h5>
    <div class="row my-5">
        @using (@Html.BeginForm("Index", "Alunos", FormMethod.Post, new { enctype = "multipart/form-data", @class = "ali" }))
        {
            <h3>Importar alunos de uma planilha</h3>
            <div class="form-row align-content-center">

                <div class="card p-3 align-content-center">
                    <h4 style="text-align:center;">Escolher Arquivo</h4>
                    <input type="file" name="postedFile" class="mt-3" style="text-align:center;" />
                    <input type="submit" style="align-self:center" value="Importar" class="btn btn-outline-primary m-3" />
                </div>

            </div>
        }
    </div>

    <div>

        <p>
            @Html.ActionLink("Criar novo aluno", "Create", new { }, new { @class = "btn btn-primary" })
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Turma)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turma)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdAluno }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdAluno }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdAluno })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>