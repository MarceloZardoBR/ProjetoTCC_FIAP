@model DotNetAppSqlDb.Models.Aluno
@{
    ViewBag.Title = "AlterarSenha";
    Layout = "~/Views/Shared/AlunoView.cshtml";
}

<html>
<head>
    <link href="@Url.Content("~/Content/css/vocacional-checkbox.css")" rel="stylesheet">
</head>
<body>
    <!-- Default unchecked -->
    <div>
        @using (Html.BeginForm("Editar", "Aluno", FormMethod.Post))
        {

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdAluno)
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.Senha)
                @Html.HiddenFor(model => model.Turma)
                @Html.HiddenFor(model => model.Genero)
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeCompleto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeCompleto, new { htmlAttributes = new { @class = "form-control w-25" } })
                        @Html.ValidationMessageFor(model => model.NomeCompleto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control w-25" } })
                        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                            @Html.ActionLink("Voltar", "IndexAluno", "Aluno", Model, new { @class = "btn btn-danger" })
                    </div>
                </div>
                <div class="col-md-10">
                    <!-- Depois Ajustar no CSS-->
                    @TempData["Mensagem"]
                </div>
            </div>
        }
            
    </div>
</body>
</html>