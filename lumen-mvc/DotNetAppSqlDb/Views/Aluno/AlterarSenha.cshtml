@model DotNetAppSqlDb.Models.Aluno

@{
    ViewBag.Title = "AlterarSenha";
    Layout = "~/Views/Shared/AlunoView.cshtml";
    string senhaPassada = (string)ViewData["SenhaPassada"];
}

<html>
<head>
    <link href="@Url.Content("~/Content/css/vocacional-checkbox.css")" rel="stylesheet">
</head>
<body>
    <!-- Default unchecked -->
    <div>
        <div>
                    <!-- Depois Ajustar no CSS-->
                        <h5 style="text-align:center">@TempData["Mensagem"]</h5>
                </div>
        @using (Html.BeginForm("MudarSenha", "Aluno", FormMethod.Post, null))
        {
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdAluno)
            @Html.HiddenFor(model => model.NomeCompleto)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.Telefone)
            @Html.HiddenFor(model => model.Genero)
            @Html.HiddenFor(model => model.IdEscola)
            @Html.HiddenFor(model => model.SenhaPassada, new { @Value = senhaPassada })

            <div class="form-group">
                @Html.Label("Senha Atual", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.SenhaAtual, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Nova Senha", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Senha, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*@Html.ActionLink("Alterar Senha", "AlterarSenha", "Aluno", new {aluno = Model, senhaPassada}, new { @class="btn btn-primary"} )*@
                    <input type="button" value="Alterar" class="btn btn-primary" data-toggle="modal" data-target="#abrirModalSenha" />
                </div>
            </div>

            <div class="modal fade" id="abrirModalSenha" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Autorização para Passeio</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <!--Aqui é o Body, onde coloca os valores-->
                                <label style="text-align:center">Você deseja alterar a senha?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                            <button type="submit" class="btn btn-primary">Sim</button>
                            @*@Html.ActionLink("Confirmar", "EscolherPasseio", "Resultado", new { idPasseio = Model.IdPasseio, idAluno = alunoModel.IdAluno}, new { @class = "btn btn-primary" })*@
                        </div>

                    </div>
                </div>
            </div>

        </div>
        }
    </div>
</body>
</html>