@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminView.cshtml";
    DotNetAppSqlDb.Models.Usuario usuario = (DotNetAppSqlDb.Models.Usuario)HttpContext.Current.Session["UsuarioLogado"];
    var tipoUsuario = (string)HttpContext.Current.Session["UsuarioLogadoTipo"];
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>
</div>


<h2>Área Administrativa</h2>
  
<div class="well text-center">
    @if (tipoUsuario == "escola")
{
    <div class="well text-center">
        Bem Vindo @usuario.Escola.Nome
    </div>

}
else
{
    <div class="well text-center">
        Bem Vindo @usuario.Empresa.NomeEmpresa
    </div>
}
    <br>
    @Html.ActionLink("LogOff", "LogOff");
</div>
